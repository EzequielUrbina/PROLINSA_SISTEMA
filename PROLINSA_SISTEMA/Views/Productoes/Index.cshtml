@model IEnumerable<PROLINSA_SISTEMA.Producto>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th WIDTH="200" align="center">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </th>
        <th WIDTH="200" align="center">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th WIDTH="50" align="center">
            @Html.DisplayNameFor(model => model.Precio_Venta)
        </th>
        <th WIDTH="50" align="center">
            @Html.DisplayNameFor(model => model.Stock)
        </th >
        <th WIDTH="50" align="center">
            @Html.DisplayNameFor(model => model.Categorias.Nombre_Categoria)
        </th>
        <th WIDTH="50" align="center">
            @Html.DisplayNameFor(model => model.DetalleProducto.NombreProveedor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td align="center">
            @Html.DisplayFor(modelItem => item.NombreProducto)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Precio_Venta)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Categorias.Nombre_Categoria)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.DetalleProducto.NombreProveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdProducto }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Detalle", "Details", new { id=item.IdProducto }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdProducto }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
