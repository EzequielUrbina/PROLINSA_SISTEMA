}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.NombreCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMPLEADOS.Nombre_Empleado)
