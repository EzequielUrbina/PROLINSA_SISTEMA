            @Html.DisplayFor(modelItem => item.Clientes.NombreCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPLEADOS.Nombre_Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoFactura.Factura)
